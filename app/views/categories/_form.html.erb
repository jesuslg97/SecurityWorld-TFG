<%= form_with(model: @categories, url: categories_path, html: { method: :post},local: true) do |form| %>

  <div class="row">

    <% if @categories.errors.any? %>
      <div class="alert-danger">
        <span>
          Se han encontrado
          <%= pluralize(@categories.errors.count, "error") %>:
        </span>
        <ul>
          <% @categories.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-md-6 mb-3">
      <div class="form-group">
        <strong><%= form.label :nombre %></strong>
        <%= form.text_field :nombre, class:"form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <strong><%= form.label :descripcion %></strong>
        <%= form.text_field :descripcion, class:"form-control" %>
      </div>
    </div>

  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= form.submit "Guardar", class: "btn btn-primary", style: "margin-right: 10px" %>
    <%= link_to 'Cancelar', categories_path, class: "btn btn-warning text-white" %>
  </div>
<% end %>