<%= form_with(model: @home) do |form| %>

  <div class="row">

    <% if @home.errors.any? %>
      <div class="alert-danger">
        <span>
          Se han encontrado
          <%= pluralize(@home.errors.count, "error") %>:
        </span>
        <ul>
          <% @home.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-md-6 mb-3">
      <div class="form-group">
        <strong><%= form.label :id, "Imagen" %></strong>
        <%= form.text_field :id, class:"form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <strong><%= form.label :image, "Selecciona Imagen" %></strong>
        <%= form.file_field :image, class:"form-control-file" %>
      </div>
    </div>

  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= form.submit "Guardar", class: "btn btn-primary", style: "margin-right: 10px" %>
    <%= link_to 'Cancelar', root_path, class: "btn btn-warning text-white" %>
  </div>
<% end %>