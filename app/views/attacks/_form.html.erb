<%= form_with(model: [:article, @attack]) do |form| %>

  <div class="row">

    <% if @attack.errors.any? %>
      <div class="alert-danger">
        <span>
          Se han encontrado
          <%= pluralize(@attack.errors.count, "error") %>:
        </span>
        <ul>
          <% @attack.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-md-6 mb-3">
      <div class="form-group">
        <strong><%= form.label :nombre %></strong>
        <%= form.text_field :nombre, class:"form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <label for="article_id"><strong>Artículo</strong></label>
        <select name="attack[article_id]" class="form-control">
          <option value="null">Seleccione artículo</option>
          <% Article.all.each do |c| %>
            <% if c.id == 3 || c.id == 6 || c.id == 9 %>
              <option value="<%= c.id %>" <%= @attack.article_id == c.id ? "selected" : "" %>>
                <% if c.id == 3 %>
                  <%= c.nombre %> Empresa
                <% end %>

                <% if c.id == 6 %>
                  <%= c.nombre %> Hogar
                <% end %>

                <% if c.id == 9 %>
                  <%= c.nombre %> Móvil
                <% end %>
              </option>
            <% end %>
          <% end %>
        </select>
      </div>
    </div>

  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= form.submit "Guardar", class: "btn btn-primary", style: "margin-right: 10px" %>
    <% if @attack.article_id == 3 %>
      <%= link_to 'Cancelar', article_show_admin_path(:id => 3), class: "btn btn-warning text-white" %>
    <% elsif @attack.article_id == 6 %>
      <%= link_to 'Cancelar', article_show_admin_path(:id => 6), class: "btn btn-warning text-white" %>
    <% elsif @attack.article_id == 9 %>
      <%= link_to 'Cancelar', article_show_admin_path(:id => 9), class: "btn btn-warning text-white" %>
    <% else %>
      <%= link_to 'Cancelar', articles_path, class: "btn btn-warning text-white" %>
    <% end %>
  </div>
<% end %>