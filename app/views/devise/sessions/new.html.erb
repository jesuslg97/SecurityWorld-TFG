<h2>Loguearse</h2>
<hr class="teal accent-3 mb-4 mt-0 d-inline-block mx-auto border-white" style="width: 150px;">

<div class="row">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group mb-4">
      <strong><%= f.label :email, "Correo =>" %></strong>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group text-center">
      <strong><%= f.label :password, "ContraseÃ±a =>" %></strong>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <% if cookies[:moon] %>
          <%= f.label :remember_me, "Recordar", class: "text-white" %>
        <% else %>
          <%= f.label :remember_me, "Recordar", class: "text-dark" %>
        <% end %>
      </div>
    <% end %>

    <div class="actions mt-3">
      <%= f.submit "Enviar", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>