<div class="text-center">
  <% if @article.id == 2 %>
    <h2>Preguntas Empresa</h2>
  <% end %>
  <% if @article.id == 5 %>
    <h2>Preguntas Hogar</h2>
  <% end %>
  <% if @article.id == 8 %>
    <h2>Preguntas Móvil</h2>
  <% end %>
  <hr class="teal accent-3 mb-4 mt-0 d-inline-block mx-auto border-dark" style="width: 100px;">
</div>

<table class="table col-md-10">
  <thead>
  <tr>
    <th class="col-md-3 text-center">Pregunta</th>
    <th class="col-md-3 text-center">Categoría</th>
    <th colspan="2" class="col-md-3 text-center">Acciones</th>
  </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr class="text-center">
        <% if question.article_id == @article.id %>
          <td class="align-middle"><%= question.pregunta %></td>
          <% if @article.id == 2 %>
            <td class="align-middle">Empresa</td>
          <% end %>
          <% if @article.id == 5 %>
            <td class="align-middle">Hogar</td>
          <% end %>
          <% if @article.id == 8 %>
            <td class="align-middle">Móvil</td>
          <% end %>
          <td class="align-middle">
            <%= link_to '', edit_article_question_path(@article, question), class: "btn btn-info text-white bi bi-pencil" %>
            <%= link_to '', article_question_path(@article, question), class: "btn btn-danger text-white bi bi-trash", method: :delete,
                        data: { confirm: '¿Seguro que desea realizar esta acción?' } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= link_to ' Nueva Pregunta', new_article_question_path, class:"btn btn-primary text-white bi bi-plus-circle" %>
</div>