<%= form_with(model: [:category, :article, @comment]) do |form| %>

  <div class="row">

    <% if @comment.errors.any? %>
      <div class="alert-danger">
        <span>
          Se han encontrado
          <%= pluralize(@comment.errors.count, "error") %>:
        </span>
        <ul>
          <% @comment.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-md-6 mb-3">
      <div class="form-group">
        <strong><%= form.label :titulo, "Título" %></strong>
        <%= form.text_field :titulo, class:"form-control" %>
      </div>
    </div>

    <div class="col-md-6 mb-3">
      <div class="form-group">
        <label for="article_id"><strong>Categoría</strong></label>
        <select name="comment[article_id]" class="form-control">
          <option value="null">Seleccione categoría</option>
          <% if @category.article_id == 1 || @category.article_id == 2 || @category.article_id == 3 %>
            <option value="1">Medidas generales Empresa</option>
            <option value="2">Preguntas frecuentes Empresa</option>
            <option value="3">Ataques específicos Empresa</option>
          <% end %>

          <% if @category.article_id == 4 || @category.article_id == 5 || @category.article_id == 6 %>
            <option value="4">Medidas generales Hogar</option>
            <option value="5">Preguntas frecuentes Hogar</option>
            <option value="6">Ataques específicos Hogar</option>
          <% end %>

          <% if @category.article_id == 7 || @category.article_id == 8 || @category.article_id == 9 %>
            <option value="7">Medidas generales Móvil</option>
            <option value="8">Preguntas frecuentes Móvil</option>
            <option value="9">Ataques específicos Móvil</option>
          <% end %>
        </select>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-group">
        <strong><%= form.label :comentario, "Comentario" %></strong>
        <%= form.text_area :comentario, class:"form-control", size: "20x5" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.hidden_field :user_id, value: current_user.id %>
    </div>

  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= form.submit "Guardar", class: "btn btn-primary", style: "margin-right: 10px" %>
    <%= link_to 'Cancelar', :back, class: "btn btn-warning text-white" %>
  </div>
<% end %>