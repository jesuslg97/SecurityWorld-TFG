<%= form_with(model: [:extra, @extra_info]) do |form| %>

  <div class="row">

    <% if @extra_info.errors.any? %>
      <div class="alert-danger">
        <span>
          Se han encontrado
          <%= pluralize(@extra_info.errors.count, "error") %>:
        </span>
        <ul>
          <% @extra_info.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-md-4 mb-3">
      <div class="form-group">
        <strong><%= form.label :nombre %></strong>
        <%= form.text_field :nombre, class:"form-control" %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-group">
        <label for="extra_id"><strong>Extra</strong></label>
        <select name="extra_info[extra_id]" class="form-control">
          <option value="null">Seleccione extra</option>
          <% Extra.all.each do |c| %>
            <option value="<%= c.id %>" <%= @extra_info.extra_id == c.id ? "selected" : "" %>>
              <%= c.nombre %>
            </option>
          <% end %>
        </select>
      </div>
    </div>

    <div class="col-md-3">
      <div class="form-group">
        <strong><%= form.label :image, "Imagen" %></strong>
        <%= form.file_field :image, class:"form-control-file" %>
      </div>
    </div>

    <div class="col-md-12 mb-2">
      <div class="form-group">
        <strong><%= form.label :descripcion, "DescripciÃ³n" %></strong>
        <%= form.text_field :descripcion, class:"form-control" %>
      </div>
    </div>

  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= form.submit "Guardar", class: "btn btn-primary", style: "margin-right: 10px" %>
    <% if @extra_info.extra_id == 1 %>
      <%= link_to 'Cancelar', extra_extra_infos_path(:id => 1), class: "btn btn-warning text-white" %>
    <% elsif @extra_info.extra_id == 2 %>
      <%= link_to 'Cancelar', extra_extra_infos_path(:id => 2), class: "btn btn-warning text-white" %>
    <% elsif @extra_info.extra_id == 3 %>
      <%= link_to 'Cancelar', extra_extra_infos_path(:id => 3), class: "btn btn-warning text-white" %>
    <% elsif @extra_info.extra_id == 4 %>
      <%= link_to 'Cancelar', extra_extra_infos_path(:id => 4), class: "btn btn-warning text-white" %>
    <% else %>
      <%= link_to 'Cancelar', extras_path, class: "btn btn-warning text-white" %>
    <% end %>
  </div>
<% end %>